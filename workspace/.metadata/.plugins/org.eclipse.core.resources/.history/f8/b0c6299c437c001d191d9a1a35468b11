@charset "UTF-8";

body {
	background: pink;
}

/* css 선택자
		-- 자주 쓰는것 : 1~5
		1)공용 선택자 : *
		2) 태그 선택자 :p
		3)클래스 선택자 : .text
		4) 아이디 선택자 :  
	


	
*/

table, td {
		border :  1px solid #333;   /* 선의 두께, 선의 종류, 선의 색상 */
		border-collapse: collapse;  /* 테두리-겹침: 겹쳐라 */
}
td{
	padding: 1rem 1.250rem; /* 패딩(=안여백): 상하 1rem , 좌우 1.250rem */
	text-align: center;     /* 열(td) 정렬 */
}
caption{
	margin : 1rem;/*마진(=바깥여백) : 상,하,좌,우 모두 적용*/
	font-size :  2rem; /*글자크기 : 기본값의 2배수(기본값이 16px인데 그것의2배 크기로 하란소리)*/
}
		




